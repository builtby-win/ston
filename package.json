{
  "name": "ston",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev --port 4322",
    "dev:api": "wrangler dev --config api/wrangler.jsonc",
    "build": "astro build",
    "build:api": "wrangler deploy --config api/wrangler.jsonc --dry-run",
    "preview": "astro preview",
    "deploy": "astro build && wrangler pages deploy",
    "deploy:api": "wrangler deploy --config api/wrangler.jsonc",
    "db:generate": "drizzle-kit generate --config api/drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply builtby-db --config api/wrangler.jsonc --local",
    "db:migrate:remote": "wrangler d1 migrations apply builtby-db --config api/wrangler.jsonc --remote",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@astrojs/react": "^4.2.1",
    "@tailwindcss/vite": "^4.1.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.16.6",
    "better-auth": "^1.4.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@builtby/biome-config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "wrangler": "^4.13.2"
  }
}
