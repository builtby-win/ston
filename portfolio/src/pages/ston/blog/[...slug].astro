---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  return posts.map((post) => {
    const dateStr = post.data.date.toISOString().split('T')[0];
    return {
      params: { slug: `${dateStr}/${post.slug}` },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await render(post);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

const dateStr = post.data.date.toISOString().split('T')[0];
const pathSegments = [
  { name: 'blog', href: '/ston/blog' },
  { name: dateStr, href: null },
  { name: post.slug, href: null }
];
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  pathSegments={pathSegments}
  backHref="/ston/blog"
>
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>
      <time class="post-date" datetime={post.data.date.toISOString()}>
        {formatDate(post.data.date)}
      </time>
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
</BlogLayout>

<style>
  .post-header {
    margin-bottom: 2.5rem;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-term-fg);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .post-date {
    color: var(--color-term-fg-muted);
    font-size: 0.875rem;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
    flex-wrap: wrap;
  }

  .tag {
    color: var(--color-term-branch);
    font-size: 0.75rem;
  }

  .tag::before {
    content: '#';
    opacity: 0.7;
  }
</style>
