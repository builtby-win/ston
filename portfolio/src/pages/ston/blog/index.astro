---
import { getCollection } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) => {
  return date.toISOString().split('T')[0];
};
---

<BlogLayout
  title="blog"
  pathSegments={[{ name: 'blog', href: null }]}
  backHref="/ston"
>
  <header class="blog-header">
    <h1>blog</h1>
    <p class="blog-description">daily findings and learnings</p>
  </header>

  {posts.length === 0 ? (
    <p class="no-posts">no posts yet</p>
  ) : (
    <ul class="post-list">
      {posts.map((post) => {
        const dateStr = formatDate(post.data.date);
        return (
          <li class="post-item">
            <a href={`/ston/blog/${dateStr}/${post.slug}`} class="post-link">
              <span class="post-title">{post.data.title}</span>
              <span class="post-separator"></span>
              <time class="post-date" datetime={dateStr}>{dateStr}</time>
            </a>
            {post.data.description && (
              <p class="post-description">{post.data.description}</p>
            )}
          </li>
        );
      })}
    </ul>
  )}
</BlogLayout>

<style>
  .blog-header {
    margin-bottom: 3rem;
  }

  .blog-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-term-dir);
    margin: 0 0 0.5rem 0;
  }

  .blog-description {
    color: var(--color-term-fg-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .no-posts {
    color: var(--color-term-fg-muted);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    margin-bottom: 1.25rem;
  }

  .post-link {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    text-decoration: none;
    transition: gap 0.15s;
  }

  .post-link:hover {
    gap: 1rem;
  }

  .post-title {
    color: var(--color-term-fg);
    flex-shrink: 0;
  }

  .post-link:hover .post-title {
    color: var(--color-term-link);
  }

  .post-separator {
    flex-grow: 1;
    border-bottom: 1px dotted var(--color-term-fg-muted);
    min-width: 2rem;
  }

  .post-date {
    color: var(--color-term-fg-muted);
    font-size: 0.875rem;
    flex-shrink: 0;
  }

  .post-description {
    color: var(--color-term-fg-muted);
    font-size: 0.875rem;
    margin: 0.25rem 0 0 0;
    padding-left: 0;
  }
</style>
